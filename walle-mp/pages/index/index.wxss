.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px;
  position: relative;
}

/* 黑洞容器样式 */
.blackhole-container {
  width: 300px;
  height: 300px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) translateY(-180px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  transition: all 0.5s ease-in-out;
}

/* 醒来状态 */
.blackhole-container.awake {
  transform: translate(-50%, -50%) translateY(-180px) scale(2);
  z-index: 1;
}

/* 黑洞核心样式 */
.blackhole-core {
  width: 100px;
  height: 100px;
  background: #000;
  border-radius: 50%;
  position: relative;
  box-shadow: 
    0 0 30px rgba(0, 0, 0, 0.5),
    inset 0 0 20px rgba(0, 0, 0, 0.8);
  animation: blackhole-bounce 2s ease-in-out infinite;
  transition: all 0.5s ease-in-out;
  transform-origin: center center;
}

/* 吸积盘容器 */
.accretion-disk {
  position: absolute;
  width: 140%;
  height: 140%;
  top: -20%;
  left: -20%;
  animation: rotate 8s linear infinite;
  transform-origin: center center;
}

/* 外部吸积盘 */
.accretion-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 2px solid transparent;
  border-radius: 50%;
  box-shadow: 0 0 20px rgba(0, 150, 255, 0.3);
  animation: pulse 3s ease-in-out infinite;
  transform-origin: center center;
}

.accretion-ring:nth-child(1) {
  border-top: 2px solid rgba(0, 150, 255, 0.8);
  transform: rotate(30deg) scale(0.9);
}

.accretion-ring:nth-child(2) {
  border-bottom: 2px solid rgba(0, 150, 255, 0.6);
  transform: rotate(-30deg) scale(0.95);
}

.accretion-ring:nth-child(3) {
  border-left: 2px solid rgba(255, 100, 100, 0.7);
  transform: rotate(60deg) scale(1);
}

/* 波纹线条 */
.wave-lines {
  position: absolute;
  width: 120%;
  height: 120%;
  top: -10%;
  left: -10%;
  border-radius: 50%;
  overflow: hidden;
}

.wave-line {
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 40%;
  animation: wave-rotate 3s linear infinite;
}

/* 眼睛样式 */
.eyes {
  position: absolute;
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: center;
  gap: 20px;
  align-items: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.5s ease-in-out;
}

.awake .eyes {
  width: 80%;
}

/* 眼睛容器 */
.eye-container {
  position: relative;
  width: 30px;
  height: 15px;
  background: transparent;
  border-top: 4px solid rgba(255, 255, 255, 0.8);
  border-radius: 30px 30px 0 0;
  transform: rotate(-3deg);
  transition: all 0.5s ease-in-out;
}

/* 醒来状态的眼睛样式 */
.awake .eye-container {
  width: 40px;
  height: 40px;
  border: none;
  border-radius: 50%;
  transform: rotate(0);
  background: #fff;
  box-shadow: 
    inset 0 0 10px rgba(0, 0, 0, 0.2),
    0 0 15px rgba(255, 255, 255, 0.5);
}

/* 鼻子样式 */
.nose {
  position: absolute;
  width: 20px;
  height: 20px;
  background: #fff;
  border-radius: 50%;
  top: 60%;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: inset -2px -2px 4px rgba(0, 0, 0, 0.2);
  animation: nose-bubble 3s ease-in-out infinite;
}

/* 文字内容 */
.text-content {
  position: relative;
  z-index: 2;
  margin-top: 200px;
  text-align: center;
}

.gradient-text {
  font-size: 40px;
  font-weight: bold;
  background: linear-gradient(135deg, #007AFF, #00C6FF);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 20px;
  display: block;
}

.subtitle {
  font-size: 18px;
  color: #666;
  margin-bottom: 40px;
  display: block;
}

.cta-button {
  padding: 15px 40px;
  background: #007AFF;
  color: white;
  border-radius: 30px;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
}

/* 动画关键帧 */
@keyframes blackhole-bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.1); opacity: 1; }
}

@keyframes wave-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes nose-bubble {
  0%, 100% {
    transform: translateX(-50%) scale(1);
    box-shadow: inset -2px -2px 4px rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: translateX(-50%) scale(1.5);
    box-shadow: inset -4px -4px 8px rgba(0, 0, 0, 0.3);
  }
} 